@using SimchaFund.data;
@model Contributor

<div style="text-align:center"><h3>Edit @Model.Name</h3></div>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form action="/contributors/SubmitEditContributor" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" value="@Model.Name">
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" name="phone" value="@Model.PhoneNumber">
            </div>
            <input type="hidden" name="id" value="@Model.Id"/>
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="include" value="1"> Always include
                </label>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
