@using SimchaFund.data;
@model Contributor
<div style="text-align:center"><h3>Add Deposit For @Model.Name</h3></div>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <form action="/Contributors/SubmitAddDeposit" method="POST">
            <div class="form-group">
                <label for="Amount">Deposit Amount</label>
                <input type="text" class="form-control" name="amount" placeholder="Deposit Amount">
            </div>
            <div class="form-group">
                <label for="date">Deposit Date</label>
                <input type="text" class="form-control" name="date" placeholder="Deposit Date">
            </div>
            <div class="form-group">
                <input type="hidden" name="contributorId" value="@Model.Id">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>